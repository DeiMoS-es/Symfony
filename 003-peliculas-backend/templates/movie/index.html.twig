{% extends 'base.html.twig' %}

{% block title %}Hello MovieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>/home/deimos/sites/Symfony/003-peliculas-backend/src/Movies/Controller/MovieController.php</code></li>
        <li>Your template at <code>/home/deimos/sites/Symfony/003-peliculas-backend/templates/movie/index.html.twig</code></li>
    </ul>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Título original</th>
            <th>Fecha de lanzamiento</th>
            <th>Popularidad</th>
            <th>Media de votos</th>
        </tr>
    </thead>
    <tbody>
        {% for movie in movies %}
            <tr>
                <td>{{ movie.id }}</td>
                <td>{{ movie.titleMovie }}</td>
                <td>{{ movie.titleOriginal }}</td>
                <td>{{ movie.releaseDate ? movie.releaseDate|date('d-m-Y') : 'No disponible' }}</td>
                <td>{{ movie.popularity }}</td>
                <td>{{ movie.voteAverage }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No hay películas disponibles.</td>
            </tr>
        {% endfor %}
    </tbody>
</table>




{% endblock %}
