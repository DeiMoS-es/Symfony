{
  "functions": {
    "api/index.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },

  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/$1", "headers": { "cache-control": "public, max-age=3600" } },
    { "src": "/assets/(.*)", "dest": "/public/assets/$1", "headers": { "cache-control": "public, max-age=3600" } },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ]
}
