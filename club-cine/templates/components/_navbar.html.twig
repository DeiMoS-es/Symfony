{# templates/components/_navbar.html.twig #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center gap-2 fw-bold" href="{{ path('user_dashboard') }}">
            <i class="bi bi-film text-primary fs-3"></i>
            <span>ClubCine</span>
        </a>

        {% if app.user %}
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 mt-3 mt-lg-0">
                    <li class="nav-item dropdown">
                        <button class="nav-link dropdown-toggle d-flex align-items-center gap-2 bg-transparent border-0" type="button" id="groupsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer;">
                            <i class="bi bi-people-fill"></i>
                            Mis Clubes
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark shadow border-secondary" aria-labelledby="groupsDropdown">
                            <li><h6 class="dropdown-header text-uppercase fs-xs fw-bold opacity-75">Tus Clubes activos</h6></li>

                            {% if groups is defined and groups is not empty %}
                                {% for group in groups %}
                                    <li>
                                        <a class="dropdown-item d-flex justify-content-between align-items-center py-2" href="{{ path('app_group_show', {id: group.id}) }}">
                                            <span><i class="bi bi-circle-fill text-success me-2" style="font-size: 0.5rem;"></i>{{ group.name }}</span>
                                            <i class="bi bi-chevron-right small opacity-50"></i>
                                        </a>
                                    </li>
                                {% endfor %}
                            {% else %}
                                <li><span class="dropdown-item-text small text-muted italic">Aún no perteneces a ningún club</span></li>
                            {% endif %}

                            <li><hr class="dropdown-divider border-secondary"></li>
                            <li>
                                <button type="button" class="dropdown-item text-primary d-flex align-items-center gap-2 py-2" data-bs-toggle="modal" data-bs-target="{{ (groups is defined and groups is not empty) ? '#infoFutureFeatureModal' : '#createGroupModal' }}">
                                    <i class="bi bi-plus-circle-fill"></i>
                                    <strong>Fundar nuevo club</strong>
                                </button>
                            </li>
                        </ul>
                    </li>
                </ul>
                <div class="ms-auto d-flex align-items-center gap-3">
                    <span class="text-light small">{{ app.user.name ?? app.user.email }}</span>
                    <a href="{{ path('auth_logout') }}" class="btn btn-sm btn-outline-danger px-3">Salir</a>
                </div>
            </div>
        {% endif %}
    </div>
</nav>