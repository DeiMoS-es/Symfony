<div class="tab-pane fade" id="miembros" role="tabpanel">
    {# FORMULARIO DE INVITACIÓN #}
    <div class="card mb-4 border-0 bg-light shadow-sm">
        <div class="card-body">
            <h6 class="fw-bold mb-3" style="font-size: 0.85rem;">
                <i class="bi bi-envelope-plus me-2 text-primary"></i>INVITAR NUEVO MIEMBRO
            </h6>
            <form action="{{ path('app_group_invite', {'id': group.id}) }}" method="POST" class="row g-2">
                <div class="col-8 col-md-9">
                    <input type="email" name="email" class="form-control form-control-sm border-0 shadow-sm" placeholder="correo@amigo.com" required>
                </div>
                <div class="col-4 col-md-3">
                    <button type="submit" class="btn btn-primary btn-sm w-100 fw-bold rounded-pill">INVITAR</button>
                </div>
            </form>
        </div>
    </div>

    <div class="d-flex align-items-center gap-2 mb-3 px-1">
        <i class="bi bi-people-fill text-secondary"></i>
        <span class="fw-bold small text-uppercase tracking-wider text-secondary">
            Miembros del club — {{ group.members|length }}
        </span>
    </div>

    <div class="list-group list-group-flush shadow-sm rounded-3 border overflow-hidden">
        {% for member in group.members %}
            <div class="list-group-item d-flex align-items-center justify-content-between py-3">
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-person-circle fs-3 text-secondary-subtle"></i>
                    <div>
                        <span class="fw-bold d-block" style="font-size: 0.9rem;">
                            {{ member.user.name|default(member.user.email) }}
                        </span>
                        {% if member.role == 'OWNER' %}
                            <span class="badge bg-warning-subtle text-warning-emphasis p-1 px-2" style="font-size: 0.65rem;">
                                <i class="bi bi-star-fill me-1"></i> FUNDADOR
                            </span>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>